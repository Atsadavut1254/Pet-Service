<% include partials/head %>
<body>
<% userdata %>
<% authen %>
<div id="wrapper">
    <% include partials/navbar %>

    <!-- PAGE TITLE START -->
    <section id="title" class="container-fluid wow fadeInDown">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <h1>Edit Profile</h1>
                </div>
                <div class="col-xs-6 text-right breadcrumbs">
                    <ul class="list-inline list-unstyled">
                        <li><a href="service">Home</a></li>
                        <li>/</li>
                        <li>Edit Profile</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- PAGE TITLE END -->

    <section id="home-content">
        <!-- CONTENT START -->
        <div class="col-2 ">
            <div class="container">

            </div>
        </div>
        <div class="container padding15">
            <div id="signup">
                <form method="POST" action="/user/edit" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-2">
                            <div class="form-group">
                                <h4>ข้อมูลส่วนตัว</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label for="name">ชื่อ (ภาษาไทย)</label>
                                <input id="name" name="name" class="form-control" type="text" required value=<%= userdata.name %>>
                            </div>
                            <div class="form-group">
                                <label for="lname">นามสกุล (ภาษาไทย)</label>
                                <input id="lname" name="lname" class="form-control" type="text" required value=<%= userdata.lname %>>
                            </div>
                            <div class="form-group">
                                <label for="gender">เพศ</label>
                                <select class="form-control" id="gender" name="gender" value=<%= userdata.gender %>>
                                    <% if(userdata.gender === 'ชาย' || userdata.gender === 'male') { %>
                                        <option value="ชาย">ชาย</option>
                                        <option value="หญิง">หญิง</option>
                                    <% }else{ %>
                                        <option value="หญิง">หญิง</option>
                                        <option value="ชาย">ชาย</option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <div class="col-sm-12 col-md-6 col-lg-6">
                                    <div id="uploadUserPic">
                                        <% let picurl = '/image/user/'+userdata._id; %>
                                        <div class="card-custom" style="width: 200px;height: 200px; text-align: center;">
                                            <img id="img-upload" src=<%= picurl %> style="width: 200px ;height: 200px;">
                                            <!--<input type="file" id="picture" name="picture" onchange="previewFile()"><br>-->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-2">
                            <div class="form-group">
                                <h4>ที่อยู่ปัจจุบัน</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-2">
                            <div class="form-group">
                                <label for="address">บ้านเลขที่</label>
                                <input id="address" name="address" class="form-control" type="text" required value=<%= userdata.address %>>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-5">
                            <div class="form-group">
                                <label for="village">หมู่/หมู่บ้าน</label>
                                <input id="village" name="village" class="form-control" type="text" value=<%= userdata.village %>>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-5">
                            <div class="form-group">
                                <label for="road">ถนน</label>
                                <input id="road" name="road" class="form-control" type="text" value=<%= userdata.road %>>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-2">
                            <div class="form-group">
                                <label for="subdistrict">ตำบล/แขวง</label>
                                <input id="subdistrict" name="subdistrict" type="text" class="form-control" required value=<%= userdata.subdistrict %>>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-5">
                            <div class="form-group">
                                <label for="district">อำเภอ/เขต</label>
                                <input id="district" name="district" type="text" class="form-control" required value=<%= userdata.district %>>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-5">
                            <div class="form-group">
                                <label for="province">จังหวัด</label>
                                <input id="province" name="province" type="text" class="form-control" required value=<%= userdata.province %>>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-2">
                            <div class="form-group">
                                <label for="zipcode">รหัสไปรษณีย์</label>
                                <input id="zipcode" name="zipcode" type="text" class="form-control" required value=<%= userdata.zipcode %> >
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-5">
                            <div class="form-group">
                                <label for="phone">เบอร์โทรศัพท์</label>
                                <input id="phone" name="phone" type="text" class="form-control" required required value=<%= userdata.phone %>>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-5">
                            <div class="form-group">
                                <label for="username">username</label>
                                <input id="username" name="username" type="text" class="form-control" required value=<%= userdata.username %>>
                            </div>
                        </div>
                    </div>
                    <!--<div class="row">-->
                        <!--<div class="col-sm-12 col-md-12 col-lg-5">-->
                            <!--<div class="form-group">-->
                                <!--<label for="password">รหัสผ่าน</label>-->
                                <!--<input id="password" name="password" type="password" class="form-control" required>-->
                            <!--</div>-->
                        <!--</div>-->
                    <!--</div>-->
                    <!--<input type="text" id="status" name="status" value="consumer" hidden>-->
                    <div class="form-group">
                        <div align="center">
                            <label class="col-sm-4 control-label">
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <button class="btn btn-success" type="submit">Save</button>
                            <a class="btn btn-default" href=<%= '/user/'+userdata.username %>>Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <% include partials/footer %>
</div>
<!-- CONTENT END -->

<!-- MAIN JS FILES REQUIRED ON ALL PAGES -->
<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/bootstrap-hover-dropdown/bootstrap-hover-dropdown.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- EDURA JS REQUIRED ON ALL PAGES-->
<script src="/javascripts/script.js"></script>

</body>